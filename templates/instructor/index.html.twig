{% extends 'base.html.twig' %}

{% block title %}Instructor index{% endblock %}

{% block body %}

    <div class='row justify-content-center mb-3'>
        <div class='col text-center'>
            <a href="{{ path('instructor_new') }} "><button class="btn btn-lg btn-no-bg hover-pr rad-rounded-xs px-5">New</button></a>
        </div>
    </div>

    <h1 class='text-center mb-3'>Instructor list</h1>

    <div class="row text-center tab-header">
        <div class="col-5 tab-cell-header px-2 py-2">
            Last name
        </div>
        <div class="col-5 tab-cell-header px-2 py-2">
            First name
        </div>
        <div class="col-2 tab-cell-header px-2 py-2">
            Trainings
        </div>
    </div>
    {% for instructor in instructors %}
        <a href="{{ path('instructor_show', {'id': instructor.id}) }}" class="link-unstyled">
            <div class="row text-center tab-row link-style-disabled">
                <div class="col-5 tab-cell px-2 py-2">
                    {{ instructor.lastName }}
                </div>
                <div class="col-5 tab-cell px-2 py-2">
                    {{ instructor.firstName }}
                </div>
                <div class="col-2 tab-cell px-2 py-2">
                    {{ instructor.sessions|length }}
                </div>
            </div>
        </a>
    {% else %}
        <div class='row justify-content-center mt-2'>
            <div class='col text-center'>
                <div class="alert alert-danger">No entry found</div>
            </div>
        </div>
    {% endfor %}

{% endblock %}
