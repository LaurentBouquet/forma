{% extends 'base.html.twig' %}

{% block title %}Training{% endblock %}

{% block body %}
    <h1>Training</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ training.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ training.title }}</td>
            </tr>
            <tr>
                <th>Platform</th>
                <td>{{ training.platform }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ training.trainingCategory }}</td>
            </tr>
            <tr>
                <th>Goals</th>
                <td>
                {% for goal in training.goals %}
                    {{ goal }}<br/>
                {% endfor %}
                </td>
            </tr>

            
        </tbody>
    </table>

    <a href="{{ path('training_index') }}">back to list</a>

    <a href="{{ path('training_edit', {'id': training.id}) }}">edit</a>

    {{ include('training/_delete_form.html.twig') }}
{% endblock %}
