{% extends 'base.html.twig' %}

{% block title %}Training index{% endblock %}

{% block body %}

    <div class='row justify-content-center mb-3'>
        <div class='col text-center'>
            <a href="{{ path('training_new') }} "><button class="btn btn-lg btn-no-bg hover-pr rad-rounded-xs px-5">New</button></a>
        </div>
    </div>

    <h1 class='text-center mb-3'>Training list</h1>

    <div class="row text-center tab-header">
        <div class="col-4 tab-cell-header px-2 py-2">
            Title
        </div>
        <div class="col-2 tab-cell-header px-2 py-2">
            Platform
        </div>
        <div class="col-2 tab-cell-header px-2 py-2">
            Reference number
        </div>
        <div class="col-3 tab-cell-header px-2 py-2">
            Category
        </div>
        <div class="col-1 tab-cell-header px-2 py-2">
            Goal
        </div>
    </div>
    {% for training in trainings %}
        <a href="{{ path('training_show', {'id': training.id}) }}" class="link-unstyled">
            <div class="row text-center tab-row link-style-disabled">
                <div class="col-4 tab-cell px-2 py-2">
                    {{ training.title }}
                </div>
                <div class="col-2 tab-cell px-2 py-2">
                    {{ training.platform }}
                </div>
                <div class="col-2 tab-cell px-2 py-2">
                    {{ training.referenceNumber }}
                </div>
                <div class="col-3 tab-cell px-2 py-2">
                    {{ training.trainingCategory }}
                </div>
                <div class="col-1 tab-cell px-2 py-2">
                    {{ training.goals|length }}
                </div>
            </div>
        </a>
    {% else %}
        <div class='row justify-content-center mt-2'>
            <div class='col text-center'>
                <div class="alert alert-danger">No entry found</div>
            </div>
        </div>
    {% endfor %}

{% endblock %}
