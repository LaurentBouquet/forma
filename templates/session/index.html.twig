{% extends 'base.html.twig' %}

{% block title %}{{'Session index'|trans}}{% endblock %}

{% block body %}

    <h1 class='text-center mb-3'>{{'Sessions list'|trans}}</h1>

    <div class='row justify-content-center'>
        <div class='col text-center mb-3'>
            <a href="{{ path('session_index') }}"><button class="btn btn-lg btn-no-bg hover-pr rad-rounded-xs px-5">{{'Delete'|trans}}Export to Excel</button></a>
        </div>
    </div>

    <div class="row text-center tab-header">
        <div class="col-5 tab-cell-header px-2 py-2">
            {{'Training'|trans}}
        </div>
        <div class="col-3 tab-cell-header px-2 py-2">
            {{'Training location'|trans}}
        </div>
        <div class="col-2 tab-cell-header px-2 py-2">
            {{'Start date'|trans}}
        </div>
        <div class="col-2 tab-cell-header px-2 py-2">
            {{'End date'|trans}}
        </div>
    </div>
    {% for session in sessions %}
        <a href="{{ path('session_show', {'id': session.id}) }}" class="link-unstyled">
            <div class="row text-center tab-row link-style-disabled">
                <div class="col-5 tab-cell px-2 py-2">
                    {{ session.training }}
                </div>
                <div class="col-3 tab-cell px-2 py-2">
                    {{ session.location }}
                </div>
                <div class="col-2 tab-cell px-2 py-2">
                    {{ session.startDate ? session.startDate|date('d-m-Y') : '' }}
                </div>
                <div class="col-2 tab-cell px-2 py-2">
                    {{ session.endDate ? session.endDate|date('d-m-Y') : '' }}
                </div>
            </div>
        </a>
    {% else %}
        <div class='row justify-content-center mt-2'>
            <div class='col text-center'>
                <div class="alert alert-danger">{{'No entry found'|trans}}</div>
            </div>
        </div>
    {% endfor %}
    
{% endblock %}
