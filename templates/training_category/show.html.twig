{% extends 'base.html.twig' %}

{% block title %}{{'Training Category'|trans}}{% endblock %}

{% block body %}
    <a href="{{ path('training_category_index') }}"><i class="fas fa-chevron-left h1 back-btn"></i></a>
    
    <div class='row justify-content-center mb-5'>
        <div class='col text-center'>
            <a href="{{ path('training_category_edit', {'id': training_category.id}) }}"><button class="btn btn-lg btn-no-bg hover-pr rad-rounded-xs px-5">{{'Edit'|trans}}</button></a>
        </div>
    </div>

    <h1 class="text-center mb-5">{{ training_category.title }}</h1>

    <div class='d-flex row mb-5 justify-content-around'>

        <div class='mb-4'>
            <div class='info-box-header p-3 text-center'><i class="info-box-icon fas fa-chalkboard-teacher fa-2x"></i><label class='h4 px-3'>{{'Associated trainings'|trans}}</label></div>
            <div class='info-box-content px-4 py-3 text-center'>
                <h5>Number : {{ training_category.trainings|length }}</h5>
                <hr>
                {% if training_category.trainings|length > 0 %}
                    {% for training in training_category.trainings %}
                        <h5>{{ training.title }}</h5>
                        <hr>
                    {% endfor %}
                {% else %}
                    <h5 class="font-italic text-danger">{{'No trainings for this category'|trans}}</h5>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
