{% extends 'base.html.twig' %}

{% block title %}{{'Welcome!'|trans}}{% endblock %}

{% block body %}

    <div class="text-center">

        <h2 class="card-title">{{'F.C. Pro training management software'|trans}}</h2>
        <h5 class="card-title text-center font-italic">{{'Import a new .csv file to get started'|trans}}
            <i class="fas fa-question-circle fa-sm ml-2" data-toggle="tooltip" data-placement="bottom" title="Pensez a ajouté au préalable des formateurs et des objectifs"></i>
        </h5>

        {{ form_start(form) }}

            {{ form_widget(form.file_name, {'attr': {'class': 'mb-4'}}) }}

            {{ form_widget(form.submit, {'attr': {'class': 'rad-rounded-xs btn-lg btn-primary px-5 my-5'}}) }}
            {{ form_errors(form) }}
            {{ form_errors(form.file_name) }}

            {{ form_rest(form) }}
                
        {{ form_end(form) }}

        <div class="row mt-5">
            <div class="col">
                <h1 class='stats-nb'>{{ trainings_nb|length }}</h1>
                {% if trainings_nb|length == 1 %}
                    <h4>{{'Training'|trans}}</h4>
                    <h4>{{'recorded'|trans}}</h4>
                {% else %}
                    <h4>{{'Trainings'|trans}}</h4>
                    <h4>{{'recordeds'|trans}}</h4>
                {% endif %}
                
            </div>
            <div class="col">
                <h1 class='stats-nb'>{{ trainees|length }}</h1>
                {% if trainees|length < 2 %}
                    <h4>{{'Trainee'|trans}}</h4>
                    <h4>{{'trained'|trans}}</h4>
                {% else %}
                    <h4>{{'Trainees'|trans}}</h4>
                    <h4>{{'traineds'|trans}}</h4>
                {% endif %}
                
            </div>
            <div class="col">
                <h1 class='stats-nb'>{{ companies|length }}</h1>
                {% if companies|length < 2 %}
                    <h4>{{'Company'|trans}}</h4>
                    <h4>{{'participant'|trans}}</h4>    
                {% else %}
                    <h4>{{'Companies'|trans}}</h4>
                    <h4>{{'participants'|trans}}</h4>
                {% endif %}
                
            </div>
        </div>
    </div>

    <div class="modal fade" id="demoModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">{{'Please confirm!'|trans}}</h2>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>{{'This is the modal body, do you like it?'|trans}}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{{'Confirm'|trans}}</button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="text-center fixed-bottom">
        <h5 class="h5 font-weight-normal">©{{ "now"|date("Y") }} - Formadytho</h5>
    </div>

    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })

        $('#upload_file_name').on('change',function(){
            var fileName = $(this).val();
            $(this).next('.custom-file-label').html(fileName);
        })
    </script>

{% endblock %}
