{% extends 'base.html.twig' %}

{% block title %}{{'Welcome!'|trans}}{% endblock %}

{% block body %}

    <div class="text-center">

        <h2 class="card-title">Le logiciel de gestion des formations F.C. Pro</h2>
        <h5 class="card-title text-center font-italic">Importer un nouveau fichier .csv pour démarrer</h5>

        {{ form_start(form) }}

            {{ form_widget(form.file_name, {'attr': {'class': 'mb-4'}}) }}

            {{ form_widget(form.submit, {'attr': {'class': 'rad-rounded-xs btn-lg btn-primary px-5 my-5'}}) }}
            {{ form_errors(form) }}
            {{ form_errors(form.file_name) }}

            {{ form_rest(form) }}
                
        {{ form_end(form) }}

        <div class="row mt-5">
            <div class="col">
                <h1 class='stats-nb'>{{ sessions|length }}</h1>
                <h4>Sessions</h4>
                <h4>enregistrés</h4>
            </div>
            <div class="col">
                <h1 class='stats-nb'>{{ trainees|length }}</h1>
                <h4>Stagiaires</h4>
                <h4>formés</h4>
            </div>
            <div class="col">
                <h1 class='stats-nb'>{{ companies|length }}</h1>
                <h4>Entreprises</h4>
                <h4>participantes</h4>
            </div>
        </div>
    </div>
    
    <div class="text-center fixed-bottom">
        <h5 class="h5 font-weight-normal">©{{ "now"|date("Y") }} - Forma</h5>
    </div>

    <script>
        $('#upload_file_name').on('change',function(){
            var fileName = $(this).val();
            $(this).next('.custom-file-label').html(fileName);
        })
    </script>

{% endblock %}
